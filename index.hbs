{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}
{{> "header"}}

<div class="sm-grid">
    <div class="sm-zap"><span>⌁</span></div>
</div>

<main class="sm-grid" id="sm-main">
    <div class="sm-grid-home">
        {{#foreach posts}}
            {{#if @first}}
                {{> "cards/card-featured"}}
            {{else}}
                {{> "cards/card-base"}}
            {{/if}}
        {{/foreach}}
    </div>
</main>

{{pagination}}